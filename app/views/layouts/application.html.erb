<!DOCTYPE html>
<html>
  <head>
    <title>Solar Car Racing</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header class="globalHeader">
      <div class="wrapper">
        <div class="globalHeader__branding">
          <%= link_to 'Solar Car Racing', :root %>
        </div>
        <nav class="globalHeader__userBar">
          <% if user_signed_in? %>
            <div class="globalHeader__userBar__currentMember" id="currentMember-menu-trigger">
              Hello <%= current_user.username %> <%= image_tag current_user.gravatar_url, class: 'globalHeader__userBar__currentMember__avatar' %><div class="globalHeader__userBar__currentMember__trigger"><div>
            </div>
            <div class="globalHeader__userBar__currentMember__menu" id="currentMember-menu-menu">
          <% end %>
          <%= render 'users/menu/user_bar_items' %>
          <% if user_signed_in? %>
            </div>
          <% end %>
        </nav>
        <nav class="globalHeader__mainNav">
          <ul>
            <li><%= link_to 'Home', :root %></li>
            <li><%= link_to 'Forums', :root %></li>
          </ul>
        </nav>
        <div class="clearBoth"></div>
      </div>
    </header>
    <main>
      <div class="wrapper">
        <%= yield %>
      </div>
    </main>
    <footer class="globalFooter">
      <div class="wrapper">
        Created by <a href="http://alecgunnar.com" target="_blank">Alec Carpenter</a>.
      </div>
    </footer>
  </body>
</html>
